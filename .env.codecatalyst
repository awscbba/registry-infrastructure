# CodeCatalyst Environment Variables for Infrastructure Repository
# These variables are used in CodeCatalyst workflows

# CodeCatalyst Configuration
CODECATALYST_SPACE_NAME=AWSCocha
CODECATALYST_PROJECT_NAME=people-registry

# Repository Names
INFRASTRUCTURE_REPO_NAME=registry-infrastructure
API_REPO_NAME=registry-api
FRONTEND_REPO_NAME=register-frontend

# Infrastructure Configuration
STACK_NAME=PeopleRegisterInfrastructureStack
AWS_REGION=us-west-2
ENVIRONMENT=production

# CDK Configuration
CDK_VERSION=latest
PYTHON_VERSION=3.11
NODE_VERSION=18

# Deployment Configuration
REQUIRE_APPROVAL=never
OUTPUTS_FILE=outputs.json
DEPLOYMENT_OUTPUTS_FILE=deployment-outputs.env

# Testing Configuration
PYTEST_COMMAND=python -m pytest tests/ -v
LINT_COMMAND=flake8 . --max-line-length=88 --extend-ignore=E203,W503 --exclude=.venv,cdk.out
TYPE_CHECK_COMMAND=mypy . --ignore-missing-imports

# Security Configuration
BANDIT_COMMAND=bandit -r . -f json -o bandit-report.json --exclude=.venv,cdk.out
SAFETY_COMMAND=safety check --json --output safety-report.json

# Justfile Configuration
JUST_VERSION=latest
FRONTEND_DIR=../people-register-frontend
API_DIR=../people-register-api
WORK_DIR=/tmp/people-register-deployment

# Monitoring Configuration
HEALTH_CHECK_TIMEOUT=30
INTEGRATION_TEST_TIMEOUT=60
DEPLOYMENT_TIMEOUT=1800
